<mvc:View controllerName="logaligroup.nomina.controller.Menu"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >
    <Page id="page" title="{i18n>title}">
        <content>
         <Panel expandable="true" expand="true" headerText="{i18n>menuEmple}" width="auto" class="sapUiResponsiveMargin">
		 
		  <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" press="navToCreate" headerImage="sap-icon://add-employee" >
		   <TileContent footer="{i18n>crearEmpleado}">
		   </TileContent>
	      </GenericTile>
 
          <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" press="navToConsulta"  headerImage="sap-icon://employee-lookup">
		   <TileContent footer="{i18n>verEmpleado}">
		   </TileContent>
	      </GenericTile>		   
	     </Panel>

         <Panel expandable="true" headerText="{i18n>menuPedido}" width="auto" class="sapUiResponsiveMargin">
		  <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" press="navToPedidos" headerImage="sap-icon://signature"  >
		    <TileContent footer="{i18n>firmarPedido}">
		    </TileContent>
	      </GenericTile>	
	     </Panel>
         
   </content>
    </Page>
</mvc:View>
